{
  "$schema": "https://json-schema.org/draft-07/schema",
  "vaults": [
    {
      "id": "personal",
      "name": "Personal Knowledge Base",
      "path": "/Users/you/Documents/PersonalVault",
      "enabled": true,
      "classification": "personal"
    },
    {
      "id": "work",
      "name": "Work Notes",
      "path": "/Users/you/Documents/WorkVault",
      "enabled": true,
      "classification": "work"
    },
    {
      "id": "archive",
      "name": "Archived Notes",
      "path": "/Users/you/Documents/ArchiveVault",
      "enabled": false,
      "classification": "archive"
    }
  ],
  "databasePath": "/Users/you/.obsidian-knowledge/knowledge.db",
  "logging": {
    "level": "info",
    "file": "/Users/you/.obsidian-knowledge/server.log"
  },
  "search": {
    "fuzzyThreshold": 0.5
  },
  "linter": {
    "autoLintDefault": false
  }
}
